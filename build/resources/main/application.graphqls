schema {
    query: Query
    mutation: Mutation
    subscription: Subscription
}

type HelloWorld {
    id: Int!
    myNameIs: String!
}

type Query {
    getHelloWorlds: [HelloWorld]
    getHelloWorldsByName(name: String): [HelloWorld]
}

type Mutation {
    saveHelloWorld(name: String): HelloWorld
}

type Subscription {
    sayHelloToTheWorld: HelloWorld!
    saidHelloToTheWorld(name: String!): HelloWorld!
}
