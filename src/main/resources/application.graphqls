schema {
    query: Query
    mutation: Mutation
    subscription: Subscription
}

type HelloWorld {
    myNameIs: String!
}

type Query {
    getHelloWorlds(count: Int): [HelloWorld]
}

type Mutation {
    setHelloWorlds(name: String, count: Int): [HelloWorld]
}

type Subscription {
    sayHelloToTheWorld: HelloWorld!
    sayHelloToTheWorldByName(name: String!): HelloWorld!
}
